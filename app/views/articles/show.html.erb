<ol class="breadcrumb">
  <li><%= link_to "首頁", root_path %></li>
  <li><%= link_to "文章總覽", articles_path %></li>
  <li class="active">文章：<%= @article.title %></li>
</ol>

<%= @article.title %>
<%= @article.user_name %>
<div class="content">
  <%= markdown(@article.content) %>
</div>
<div class="comments">
  <% if @comments %>
    <% @comments.each do |co| %>
      <%= co.content %>
      <%= co.user_name %>
      <%= time_ago_in_words(co.created_at) %><br/>
    <% end %>
  <% end %>
</div>
