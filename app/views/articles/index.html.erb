<% content_for :breadcrumb do %>
  <li class="active">文章總覽</li>
<% end %>

<div class="col-md-2">
  <div class="list sidebar">
    <%= link_to "全部", articles_path %><br/>
    <% @art_kind.each do |at| %>
      <%= link_to at.name, articles_path(art_kind_id: at.id) %><br/>
    <% end %>
  </div>
</div>
<div class="col-md-10">
  <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
  <div class="list">
    <% @articles.each do |art| %>
      <span class="article-title"><%= link_to art.title, article_path(art.id) %></span>
      <span class="comment-user"><%= art.user_name %> | <%= art.art_kind.name %>
      <%= timeago_tag art.created_at, :nojs => true, :limit => 30.days.ago, :lang => 'zh-TW' %>
      </span>
      <div class="content">
        <%= markdown(truncate(art.content, length: 100, omission: "")) %>
        <%= link_to "更多內容..", article_path(art.id), class: "center block" %>
      </div>
    <% end %>
  </div>
  <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
</div>
