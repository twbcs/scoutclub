<% content_for :breadcrumb do %>
  <li><%= link_to "團康音樂", musics_path %></li>
  <li class="active"><%= @music.title %></li>
<% end %>

<div class="list">
  <span class="head"><%= @music.title %></span>
  <%= link_to File.basename(@music.file.path), "#{@music.file}" %>
  <audio controls>
    <source src="<%= @music.file %>" type="audio/mpeg">
    您使用的瀏覽器不支援直接播放音樂.
  </audio>
  <div class="content">
    <%= markdown(@music.description) %>
  </div>
</div>
