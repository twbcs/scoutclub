<ol class="breadcrumb">
  <li><%= link_to "首頁", root_path %></li>
  <li><%= link_to "討論區", forums_path %></li>
  <li><%= link_to @forum.title, forum_path(@forum) %></li>
  <li class="active" ><%= @posts.first.subject %></li>
</ol>

<% @posts.each do |m| %>
  <%= m.subject  %>
  <%= m.body %>
  <%= m.user.name %>
  <%= link_to "修改", edit_forum_post_path(forum_id: m.forum_id, id: m.id) %>
  <%= link_to "回文", new_forum_post_path(forum_id: m.forum_id, reply_id: @posts.first.id) %>
  <%= link_to "刪除", forum_post_path(forum_id: m.forum_id, id: m.id), :method => :delete %><br/>
<% end %>
