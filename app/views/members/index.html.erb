<% content_for :breadcrumb do %>
  <li class="active">團員資料</li>
<% end %>

<div class="col-md-2">
  <aside class="ui vertical menu">
    <%= link_to "全部", members_path, class: "item" %>
    <% @years.each do |year, number| %>
      <%= link_to raw("#{year}<div class='ui teal label'>#{number}</div>"), members_path(year: year), class: "item" %>
    <% end %>
  </aside>
</div>

<div class="col-md-10">
  <div class="list">
    <table  class="table table-hover">
      <thead>
        <tr>
          <td>學年度</td>
          <td>屆數</td>
          <td>姓名</td>
          <td>綽號</td>
          <td>性別</td>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.year %></td>
          <td><%= member.th %></td>
          <td><%= member.name %></td>
          <td><%= member.nname %></td>
          <td><%= member.sex ? '男' : '女' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
