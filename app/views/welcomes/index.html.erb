<ol class="breadcrumb">
  <li>首頁</li>
</ol>

<div class="col-md-6">
  <div id="training" class="list">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>
            <strong>近期授課</strong>
          </td>
          <td align="right">
            更多...
          </td>
        </tr>
      </thead>
      <tbody>
        <% @training_list.each do |train| %>
        <tr>
          <td><%= train.title %></td>
          <td align="right">
            <%= train.start_date > Time.now ? '還有' + time_ago_in_words(train.start_date) : '經過' + time_ago_in_words(train.start_date) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
