<article class="col-md-6">
  <div id="training" class="list">
    <h4 class="ui teal ribbon label">近期授課</h4>
    <span class="right more"><%= link_to "更多...", schedules_path(doing_kind_id: 2) %></span>
    <table class="table table-hover">
      <tbody>
        <% @training_list.each do |train| %>
        <tr>
          <td>
            <%= link_to train.title, schedule_path(train.id) %>
          </td>
          <td align="right">
            <%= '還有' if train.start_date > Time.now %>
            <%= timeago_tag train.start_date, nojs: true, limit: 30.days.ago, lang: 'zh-TW' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</article>
