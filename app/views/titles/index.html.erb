<% content_for :breadcrumb do %>
  <li class="active">職務職掌</li>
<% end %>

<aside class="col-md-2">
  <div class="list">
    <table class="table table-hover table-no-padding">
      <tbody>
        <% @titles.each do |t| %>
        <tr>
          <td>
            <%= link_to t.title, titles_path(id: t.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</aside>
<article class="col-md-10">
  <div id="title" class="list">
    <% if @title %>
      <p class="title-title"><%= @title.title %></p>
      <div>
        <%= markdown(@title.description) %>
        <%= "修訂於 " + time_parser(@title.updated_at) if @title.updated_at != @title.created_at %>
      </div>
    <% end %>
  </div>
</article>
