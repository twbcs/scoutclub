<ol class="breadcrumb">
  <li><a href="#">首頁</a></li>
  <li><%= link_to "職務職掌", titles_path %></li>
  <li class="active">修改</li>
</ol>

<%= form_for @title do |f| %>

  <div class="form-inline">
  	<%= f.label :title %>
    <%= f.text_field :title, :placeholder => "輸入職務", :class => "form-control" %>
  </div>
  <div class="form-inline">
  	<%= f.label :level %>
    <%= f.text_field :level, :placeholder => "輸入層級", :class => "form-control" %>
  </div>

  <div class="form-inline">
  	<%= f.label :description %>
    <%= f.text_area :description, :placeholder => "輸入職掌說明", :class => "form-control" %>
  </div>

<%= f.submit "確認", :disable_with => '處理中...' %>

<% end %>	