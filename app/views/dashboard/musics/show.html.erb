<% content_for :breadcrumb do %>
  <li><%= link_to "團康音樂", dashboard_musics_path %></li>
  <li class="active"><%= @music.title %></li>
<% end %>

<div class="list">
  <span class="head"><%= @music.title %></span>
  <%= link_to File.basename(@music.file.path), "#{@music.file}" %>
  <audio controls>
    <source src="<%= @music.file %>" type="audio/mpeg">
    您使用的瀏覽器不支援直接播放音樂.
  </audio>
  <div class="content">
    <%= markdown(@music.description) %>
  </div>
  <%= link_to "修改", edit_dashboard_music_path(@music.id), class: "btn btn-xs btn-success" if @inside%>
  <%= link_to "刪除", dashboard_music_path(@music.id), method: :delete, class: "btn btn-xs btn-danger" if @admin %>
</div>
