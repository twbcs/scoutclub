<div id="c<%= co.id %>" class='comment-content'>
  <%= co.content %>
  <div class='comment-user'>
    <%= co.user_name %>
    <%= timeago_tag co.created_at, nojs: true, limit: 30.days.ago, lang: 'zh-TW' %>
    <%= link_to "刪除", comment_destroy_dashboard_article_path(article_id: co.article_id, comment_id: co.id),
                      remote: true, method: :delete, data: { confirm: '確定要刪除嗎?' }, class: "btn btn-xs btn-danger" if co.user_id == current_user.id || admin %>
  </div>
</div>
