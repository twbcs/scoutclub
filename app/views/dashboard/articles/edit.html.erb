<% content_for :breadcrumb do %>
  <li><%= link_to "文章總覽", dashboard_articles_path %></li>
  <li class="active">修改文章</li>
<% end %>

<%= form_for [:dashboard,@article] do |f| %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.select(:art_kind_id, ArtKind.all.collect {|u| [u.name, u.id]},
      { :prompt => '請選擇'}, :class => 'form-control' ) %>
  <%= f.text_area :content %>
  <%= f.submit "確認", class: " btn btn-success" %>
<% end %>
