<ol class="breadcrumb">
  <li><%= link_to "首頁", dashboard_root_path %></li>
  <li><%= link_to "文章總覽", dashboard_articles_path %></li>
  <li class="active">修改文章</li>
</ol>

<%= form_for [:dashboard,@article] do |f| %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.select(:art_kind_id, ArtType.all.collect {|u| [u.name, u.id]},
      { :prompt => '請選擇'}, :class => 'form-control' ) %>
  <%= f.text_area :content %>
  <%= f.submit "確認", class: " btn btn-success" %>
<% end %>
