<% content_for :breadcrumb do %>
  <li class="active">團員資料</li>
<% end %>

<div class="col-xs-12 new">
  <%= new_btn if @inside %>
</div>

<div class="col-md-2">
  <aside class="ui vertical menu">
    <%= link_to "全部", dashboard_members_path, class: "item" %>
    <% @years.each do |year, number| %>
      <%= link_to raw("#{year}<div class='ui teal label'>#{number}</div>"), dashboard_members_path(year: year), class: "item" %>
    <% end %>
  </aside>
</div>

<div class="col-md-10">
  <div class="list">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>學年度</td>
          <td>屆數</td>
          <td>姓名</td>
          <td>綽號</td>
          <td>性別</td>
          <td>功能</td>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.year %></td>
          <td><%= member.th %></td>
          <td><%= member.name %></td>
          <td><%= member.nname %></td>
          <td><%= member.sex ? '男' : '女' %></td>
          <td>
            <%= link_to "修改", edit_dashboard_member_path(member), class: "btn btn-xs btn-success" if @inside %>
            <%= link_to "刪除", dashboard_member_path(member), method: :delete, data: { confirm: '確定要刪除嗎?' }, class: "btn btn-xs btn-danger" if @admin %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
