<div class="col-md-6">
  <div id="training" class="list">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>
            <strong>近期授課</strong>
          </td>
          <td align="right">
            <%= link_to "更多...", dashboard_schedules_path %>
          </td>
        </tr>
      </thead>
      <tbody>
        <% @training_list.each do |train| %>
        <tr>
          <td><%= link_to train.title, dashboard_schedule_path(train.id) %></td>
          <td align="right">
            <%= '還有' if train.start_date > Time.now %>
            <%= timeago_tag train.start_date, :nojs => true, :limit => 30.days.ago, :lang => 'zh-TW' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
