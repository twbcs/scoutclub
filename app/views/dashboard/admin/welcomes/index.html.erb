<article class="col-md-6">
  <div id="training" class="list">
    <h4 class="ui teal ribbon label">近期授課</h4>
    <span class="right more"><%= link_to "更多...", dashboard_schedules_path(doing_kind_id: 2) %></span>
    <% @training_list.each do |train| %>
      <p class="atitle"><%= link_to train.title, dashboard_admin_schedule_path(train.id) %>
        <span class="<%= "icon-eye-blocked" if train.public_at == nil || train.public_at > Time.now %>"></span>
      <span class="right"><%= '還有' if train.start_date > Time.now %>
        <%= timeago_tag train.start_date, nojs: true, limit: 30.days.ago, lang: 'zh-TW' %></span></p>
    <% end %>
  </div>
</article>

