<div class="col-md-6">
  <div id="training" class="list">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>
            <strong class="ui teal ribbon label">近期授課</strong>
          </td>
          <td align="right">
            <%= link_to "更多...", dashboard_admin_schedules_path(doing_kind_id: 2) %>
          </td>
        </tr>
      </thead>
      <tbody>
        <% @training_list.each do |train| %>
        <tr>
          <td><%= link_to train.title, dashboard_admin_schedule_path(train.id) %>
            <span class="<%= "icon-eye-blocked" if train.public_at == nil || train.public_at > Time.now %>"></span></td>
          <td align="right">
            <%= '還有' if train.start_date > Time.now %>
            <%= timeago_tag train.start_date, nojs: true, limit: 30.days.ago, lang: 'zh-TW' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
