<ol class="breadcrumb">
  <li><%= link_to "首頁", dashboard_admin_root_path %></li>
  <li class="active">文章總覽</li>
</ol>
<%= link_to "新增文章", new_dashboard_admin_article_path, class: "btn btn-success" %>
<div>
  <div class="col-md-2">
    <div class="list sidebar">
      <% @art_kind.each do |at| %>
        <%= link_to at.name, dashboard_admin_articles_path(art_kind_id: at.id) %><br/>
      <% end %>
    </div>
  </div>
  <div class="col-md-10">
    <div class="list">
      <% @articles.each do |art| %>
        <%= link_to art.title, dashboard_admin_article_path(art.id) %>
        <%= art.content %>
        <%= art.user_name %>
        <%= art.art_kind.name %>
        <%= '還有' if art.created_at > Time.now %>
        <%= timeago_tag art.created_at, :nojs => true, :limit => 30.days.ago, :lang => 'zh-TW' %>
        <%= link_to "修改", edit_dashboard_admin_article_path(art.id), class: "btn btn-sm btn-success" %><br/>
      <% end %>
    </div>
  </div>
</div>
