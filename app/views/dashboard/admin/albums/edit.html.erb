<ol class="breadcrumb">
  <li><%= link_to "首頁", dashboard_admin_root_path %></li>
  <li><%= link_to "相簿", dashboard_admin_albums_path %></li>
  <li class="active">編輯：<%= @album.title %></li>
</ol>

<%= form_for [:dashboard,:admin,@album] do |f| %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.text_area :description, class: "form-control" %>
  <div class='input-group date' id='datetimepicker1'>
    <%= f.text_field :public_at, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm"%>
    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <div class='input-group date' id='datetimepicker2'>
    <%= f.text_field :add_photo_to, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm"%>
    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <%= f.submit "確認", class: "btn btn-success" %>
<% end %>
