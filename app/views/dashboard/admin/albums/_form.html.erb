<%= form_for [:dashboard,:admin,album] do |f| %>
  <%= render 'shared/errors', object: f.object %>
  <div class="list padding">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "名稱" %>
    <%= f.label :public_at %>
    <div class='input-group date' id='datetimepicker1'>
      <%= f.text_field :public_at, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm", placeholder: "公開時間" %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
    </span>
    </div>
  <%= f.label :add_photo_to %>
  <div class='input-group date' id='datetimepicker2'>
    <%= f.text_field :add_photo_to, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm", placeholder: "最後可以增加相片的期限"%>
    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
  </span>
  </div>
  <%= f.label :description %>
  <%= f.text_area :description, rows: "20", class: "form-control", placeholder: "說明"%>
  <%= f.submit "確認", class: "btn btn-success" %>
  </div>
<% end %>
