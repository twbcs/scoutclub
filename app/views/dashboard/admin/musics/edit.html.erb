<ol class="breadcrumb">
  <li><%= link_to "首頁", dashboard_admin_root_path %></li>
  <li><%= link_to "團康音樂", dashboard_admin_musics_path %></li>
  <li class="active">修改音樂</li>
</ol>

<%= form_for [:dashboard,:admin,@music] do |f| %>
  <%= f.text_field :title, class: "form-control" %>
  <% if @music.file %>
    <%= File.basename(@music.file.path) %>
  <% else %>
    <%= f.file_field :file, class: "form-control" %>
  <% end %>
  <%= f.text_area :description, class: "form-control", rows: "20", "data-provide" => "markdown" %>
  <%= f.submit "確認", class: "btn btn-success" %>
<% end %>
