<%= form_for [:dashboard,:admin,schedule] do |f| -%>
<%= render 'shared/errors', object: f.object %>
  <div class="list padding">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :number	%>
      <%= f.text_field :number, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :start_date %>
      <div class='input-group date' id='datetimepicker1'>
        <%= f.text_field :start_date, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm"%>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :end_date %>
      <div class='input-group date' id='datetimepicker2' >
        <%= f.text_field :end_date, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm"%>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :public_at %>
      <div class='input-group date' id='datetimepicker3'>
        <%= f.text_field :public_at, class: "form-control", 'data-date-format' => "YYYY/MM/DD HH:mm"%>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :local %>
      <%= f.text_field :local, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :doing_kind_id %>
      <%= f.select(:doing_kind_id, DoingKind.all.collect {|u| [u.title, u.id]}, { :prompt => '請選擇'}, :class => 'form-control' ) %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: "20", "data-provide" => "markdown" %>
    </div>
    <%= f.submit "確認", :disable_with => '處理中...', class: "btn btn-success" %>
  </div>
<% end %>
