<% content_for :breadcrumb do %>
  <li><%= link_to "討論區權限", dashboard_admin_user_groups_path %></li>
  <li class="active">修改使用者權限</li>
<% end %>

<%= form_for [:dashboard,:admin,@user_group] do |f| %>
<%= f.hidden_field :user_id %>
<div class="form-inline">
  <%= f.label :group_id %>
  <%= f.select(:group_id, Group.all.collect {|u| [u.name, u.id]}, { :prompt => '請選擇'}, :class => 'form-control' ) %>
</div>
  <%= f.submit "確認", class: " btn btn-success" %>
<% end %>

<%= @user_group.user_id %>
