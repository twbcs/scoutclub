<ol class="breadcrumb">
  <li><%= link_to "首頁", root_path %></li>
  <li class="active">討論區</li>
</ol>
<% @forum_types.each do |f| %>
  <h5><%= f.title %></h5>
  <%= f.description %><br/>
  <% @forums.each do |x| %>
    <% view = @forum_view.include?(x.id) if @forum_view %>
    <% if x.public_at || view  %>
      <% if x.forum_type_id == f.id %>
        <%= link_to x.title, forum_path(x) %>
        <%= x.description %>
        <%= x.public_at ? '公開' : '隱私' %>
        <%= x.closing_date ? x.closing_date : ''  %><br/>
      <% end %>
    <% end %>
  <% end %>
<% end %>
