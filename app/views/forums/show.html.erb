<ol class="breadcrumb">
  <li><%= link_to "首頁", root_path %></li>
  <li><%= link_to "討論區", forums_path %></li>
  <li class="active"><%= @forum.title %></li>
</ol>

<% if @post_view
    view = @post_view.first == @forum.id
  end %>
  
<% if @forum.public_at || view %>
<div id="forum-list">
  <table class="table">
    <thead>
      <tr>
        <td>主題</td>
        <td>發布者</td>
        <td>瀏覽數</td>
        <td>發布日期</td>
        <td>更新日期</td>
      </tr>
    </thead>
    <tbody>
        <% @posts.each do |m| %>
        <tr>
          <td>
            <%= link_to m.subject, forum_post_path(@forum,m.id) %>
          </td>
          <td>
            <%= m.post_name %>
          </td>
          <td>
            <%= m.view_count %>
          </td>
          <td>
            <%= m.created_at.strftime("%Y %m.%d %H:%M") %>
          </td>
          <td>
            <%= m.update_post.strftime("%Y %m.%d %H:%M") if m.created_at != m.update_post %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<% end %>
