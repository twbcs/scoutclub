<ol class="breadcrumb">
  <li><%= link_to "首頁", root_path %></li>
  <li class="active">討論區權限</li>
</ol>

<div class="list">
  <% @user_groups.each do |m| %>
    <%= m.name  %>
    <%= m.email %>
    <%= link_to "新增權限", new_user_group_path(user_id: m.id) %><br/>
    <% m.groups.each do |g| %>
      <%= g.name %>
      <%= link_to "修改權限", edit_user_group_path(id: m.id, user_id: m.id, group_id: g.id) %>
      <%= link_to "刪除權限", user_group_path(id: m.id, user_id: m.id, group_id: g.id),
    :method => :delete  %>
    <% end %> |
  <% end %>
</div>
<%= @user_rule.user_rule %>
