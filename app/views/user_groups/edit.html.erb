<ol class="breadcrumb">
  <li><%= link_to "首頁", root_path %></li>
  <li><%= link_to "討論區權限", user_groups_path %></li>
  <li class="active">修改使用者權限</li>
</ol>

<%= form_for @user_group do |f| %>
<%= f.hidden_field :user_id %>
<div class="form-inline">
  <%= f.label :group_id %>
  <%= f.select(:group_id, Group.all.collect {|u| [u.name, u.id]}, { :prompt => '請選擇'}, :class => 'form-control' ) %>
</div>
  <%= f.submit "確認", class: " btn btn-success" %>
<% end %>


